<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

        <parent>
                <groupId>at.uni-salzburg.cs.ckgroup.jnavigator</groupId>
                <artifactId>jnavigator</artifactId>
                <version>1.2-SNAPSHOT</version>
                <relativePath>../pom.xml</relativePath>
        </parent>

	<groupId>at.uni-salzburg.cs.ckgroup.javiator</groupId>
	<artifactId>javiator-mockjaviator</artifactId>
	<packaging>jar</packaging>
	<name>JAviator MockJAviator - Project</name>
	<description>JAviator MockJAviator Project</description>
	<url>http://cs.uni-salzburg.at/javiator</url>
	<inceptionYear>2007</inceptionYear>

	<organization>
		<name>University of Salzburg - Computational Systems Group</name>
		<url>http://cs.uni-salzburg.at/~ck/group/</url>
	</organization>

	<licenses>
		<license>
			<name>GPL-2</name>
			<url>http://www.fsf.org/licensing/licenses/gpl.txt</url>
			<distribution>manual</distribution>
			<comments>GNU GENERAL PUBLIC LICENSE Version 2, June 1991</comments>
		</license>
	</licenses>

	<scm>
		<connection>scm:cvs:ext:@cs.edvz.sbg.ac.at:/home/ck/group/software:JAviator/JControl</connection>
		<developerConnection>scm:cvs:ext:@cs.edvz.sbg.ac.at:/home/ck/group/software:JAviator/JControl</developerConnection>
		<tag>GpsReceiver_branch</tag>
	</scm>

        <properties>
                <bcel-version>5.1</bcel-version>
                <commons-codec-version>1.3</commons-codec-version>
                <exotasks-version>1.0.18</exotasks-version>
                <java-version>1.4</java-version>
                <!-- javiator3d-version>1.0</javiator3d-version -->
                <!-- jnavigator-version>1.2-SNAPSHOT</jnavigator-version -->
                <!-- joystick-version>20061023</joystick-version -->
                <junit-version>3.8.1</junit-version>
                <rxtx-version>2.1.7</rxtx-version>
                <starfireExt-version>2.20</starfireExt-version>
                <tuningForkTraceGeneration-version>20071212</tuningForkTraceGeneration-version>
        </properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.2</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<goals>
							<goal>clean</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java-version}</source>
					<target>${java-version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
                        <plugin>
                                <groupId>org.apache.maven.plugins</groupId>
                                <artifactId>maven-assembly-plugin</artifactId>
                                <executions>
                                        <execution>
                                                <id>make-tgz</id>
                                                <phase>package</phase>
                                                <goals>
                                                        <goal>attached</goal>
                                                </goals>
                                                <configuration>
                                                        <descriptors>
                                                                <descriptor>src/main/assembly/unix.xml</descriptor>
                                                                <descriptor>src/main/assembly/windows.xml</descriptor>
                                                        </descriptors>
                                                </configuration>
                                        </execution>
                                </executions>
                        </plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit-version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.rxtx</groupId>
			<artifactId>rxtx</artifactId>
			<version>${rxtx-version}</version>
		</dependency>
		<dependency>
			<groupId>bcel</groupId>
			<artifactId>bcel</artifactId>
			<version>${bcel-version}</version>
		</dependency>
		<dependency>
			<groupId>com.ibm.tuningfork</groupId>
			<artifactId>tuningForkTraceGeneration</artifactId>
			<version>${tuningForkTraceGeneration-version}</version>
		</dependency>
		<dependency>
			<groupId>com.ibm.realtime.exotasks</groupId>
			<artifactId>exotasks</artifactId>
			<version>${exotasks-version}</version>
		</dependency>
		<dependency>
			<groupId>at.uni-salzburg.cs.ckgroup.jnavigator</groupId>
			<artifactId>jnavigator-lab</artifactId>
			<!-- version>${jnavigator-version}</version -->
			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>at.uni-salzburg.cs.ckgroup.jnavigator.jnavigator-io-native.linux-x86</groupId>
			<artifactId>libJNavigator</artifactId>
			<!-- version>${jnavigator-version}</version -->
			<version>${project.parent.version}</version>
			<type>so</type>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>at.uni-salzburg.cs.ckgroup.javiator</groupId>
			<artifactId>javiator-util</artifactId>
			<version>${project.parent.version}</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
		</dependency>
	</dependencies>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>taglist-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.4.2</version>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<version>2.4</version>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.2</version>
			</plugin>
		</plugins>
	</reporting>

	<distributionManagement>
		<site>
			<id>${site.id}</id>
			<url>scp://${site.host}/${site.basedir}/JControl/</url>
		</site>
		<repository>
			<id>${site.id}</id>
			<name>Inhouse Repository</name>
			<url>dav:http://${site.host}/maven2/inhouse/</url>
		</repository>
		<snapshotRepository>
			<id>${site.id}</id>
			<name>Inhouse Snapshot Repository</name>
			<url>dav:http://${site.host}/maven2/inhouse_snapshot/</url>
		</snapshotRepository>
	</distributionManagement>
</project>
